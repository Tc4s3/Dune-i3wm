# Set Mod key
set $mod Mod4
set $mod1 Mod1
# Custom sets
set $bar ~/Scripts/polyboot.sh
# Compositor
exec --no-startup-id picom -b
# Fonts
# System wide
font pango: Terminess Nerd Font Bold 16
# Title bars
font pango: Terminess Nerd Font Bold 14
# wallpaper
exec_always feh --bg-fill 
# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% && $refresh_i3status
    # Toggle audio output
    bindsym $mod+o exec ~/Scripts/toggleaudio.sh
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-
# Colors                 
    #item                   #border #backg  #text   #indi   #chbord
    client.focused          #B5A178 #E8CB74 #563123 #B5A178 #B5A178
    client.focused_inactive #E8CB74 #EDD796 #B5A178 #E8CB74 #E8CB74
    client.unfocused        #E8CB74 #EDD796 #B5A178 #E8CB74 #E8CB74
    client.urgent           #52595C #7E94A3 #220F08 #52595C #52595C                                                                   
default_border pixel 6
default_border normal
for_window [class="firefox"] border normal 4
for_window [floating] border normal
# Gaps
gaps outer 20
# Mouse organising
tiling_drag modifier titlebar
floating_modifier $mod
# Terminal
bindsym $mod+t exec konsole
# Close
bindsym $mod+x kill
# Rofi
bindsym $mod+space exec rofi -show drun
# Tab between active workspaces
bindsym $mod+Tab workspace back_and_forth
# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# Split H
bindsym $mod+b split h
# |Split V
bindsym $mod+v split v
# Fullscreen
bindsym $mod+Shift+f fullscreen toggle
# Float
bindsym $mod+f floating toggle
    # Forced floating
    for_window [class="Pcmanfm"] floating enable, resize set 1123 860
    # Float focus
    bindsym $mod+Shift+space focus mode_toggle
# Resize
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
# Workspaces
set $ws1 "〇"
set $ws2 "一"
set $ws3 "二"
set $ws4 "三"
set $ws5 "四"
set $ws6 "五"
set $ws7 "六"
set $ws8 "七"
set $ws9 "八"
set $ws0 "九"
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0
#monitors
exec --no-startup-id xrandr --output eDP-1 --primary --mode 2560x1600 --rate 60.01 --output HDMI-1-0 --mode 1920x1080 --rate 120.00 --rotate normal                                                                           
    # variables
        set $em HDMI-1-0 
		set $lm eDP-1
    # workspaces
	    workspace 〇 output $lm			
        workspace 一 output $lm
        workspace 二 output $lm
        workspace 三 output $lm
        workspace 四 output $lm
        workspace 五 output $em
        workspace 六 output $em
        workspace 七 output $em
        workspace 八 output $em
        workspace 九 output $em
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Custom keys
	# applications
	bindsym $mod+g exec firefox
    bindsym $mod+s exec spectacle
    bindsym $mod+e exec pcmanfm
	# session management
	bindsym Control+$mod+l exec "i3lock"
    bindsym Control+$mod+s exec "systemctl suspend && i3lock"
    bindsym Control+$mod+q exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"
# Polybar
exec_always --no-startup-id polybar main
	# reload pb config
	bindsym $mod+Shift+b exec $bar
